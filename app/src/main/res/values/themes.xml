<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LiteraryApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LiteraryApp" parent="Base.Theme.LiteraryApp" >
        <item name="android:windowBackground">@color/color_white</item>
        <!--                <item name="android:statusBarColor">@color/color_white</item>-->

        <!--avoid multiple click at same time-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <!--    bottom sheet-->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">
            @android:color/transparent
        </item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">
            @style/BottomSheetStyle
        </item>
    </style>
<!--    bottom navigation-->
    <style name="BottomNavigation.ActiveItemTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearanceInactive" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
</resources>